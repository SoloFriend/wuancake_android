<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.niweather.WeatherActivity"
    android:background="@mipmap/sun1"
    android:id="@+id/weather_linear">
    <!--位置信息-->
<TextView
    android:id="@+id/location_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30sp"
    android:textColor="#fff"
    android:padding="5dp"
    android:text="位置"
    android:background="#d050A6F4"
    />
    <!--主内容-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
           >
            <FrameLayout
                android:background="#00000000"
                android:id="@+id/frame_empty"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#55B6B5B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!--实时天气-->
            <include layout="@layout/now_weather"
                />
            <!--6天天气预报详情-->
                <View
                    android:background="#66F3EDED"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/forecast_viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
                <View
                    android:background="#66F3EDED"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <!--7天天气变化曲线-->
            <include layout="@layout/daily_forecast"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
