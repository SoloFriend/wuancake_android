<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/rightview"
            android:layout_toStartOf="@+id/rightview"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/baseview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/C"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="C"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/seven"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="7"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/four"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="4"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/one"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="1"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/chu"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="รท"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/eight"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="8"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/five"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="5"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/two"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="2"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/cheng"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="x"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/nine"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="9"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/six"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="6"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    cardview:cardCornerRadius="5dp"
                    cardview:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/three"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="3"
                            android:textSize="@dimen/textsize" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/rightview"
            android:layout_toStartOf="@+id/rightview"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="0.5"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/zero"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/point"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="."
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="0.2"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/del"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="D"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="0.2"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/jia"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="0.2"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/jian"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="-"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="0.4"
                cardview:cardBackgroundColor="#ff3030"
                cardview:cardCornerRadius="5dp"
                cardview:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/dengyu"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="="
                        android:textColor="#fff"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#D2B48C"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/textsize" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/second"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/lable"
                    android:layout_toRightOf="@+id/lable"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textSize="@dimen/textsize" />

                <TextView
                    android:id="@+id/lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|right"
                    android:text=""
                    android:textSize="@dimen/textsize" />
            </RelativeLayout>

            <TextView
                android:id="@+id/result"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/textsize" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
